@model PenielBikeControle.Models.ViewModels.ClienteViewModel
@using PenielBikeControle.Models.ViewModels

@{
    ModalPadraoCadastroViewModel modalCadastroCliente = new ()
    {
        Id = null,
        ModoEdicao = false,
        NomePartialView = "_ModalCliente",
        ParamModel = Model.Cliente
    };
}

<link rel="stylesheet" href="~/css/paginas/clientes.css" asp-append-version="true"/>

<input id="titulo-da-pagina" value="Clientes" style="display: none;">

<div class="div-botoes form-group row">
    <div class="col-md-8"></div>
    <div class="col-md-4 div-botao-direita">
        <a href="#" id="btnAddCliente" class="btn-add-modal btn btn-info btn-icon-split" data-toggle="modal" data-target="#modalCliente">
            <span class="icon text-white-50">
                <i class="fa-solid fa-plus"></i>
            </span>
            <span class="text">Adicionar Cliente</span>
        </a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cliente.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente.Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente.Endereco)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Clientes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cpf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endereco)
                </td>
                 <td class="row"> 
                    <a href="#" data-id-cliente="@item.Id" class="editarCliente" style="margin-right: 15px">
                        <i class="fa-regular fa-pen-to-square"></i>
                    </a>
                    <a href="#" data-id-cliente="@item.Id" class="deletarCliente">
                        <i class="fa-solid fa-trash-can"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


<div id="modalCliente" class="div-modal modal fade">
    @Html.Partial("_ModalCadastroPadrao", modalCadastroCliente)
</div>

<div id="modalEdicaoCliente" class="div-modal modal fade">
</div>

@section Scripts {
    <script src="~/js/paginas/clientes.js" asp-append-version="true"></script>    
}